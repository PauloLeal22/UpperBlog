<%- include ('partials/header.ejs') %>   
    <div class="container">
        <header>
            <div class="area-hamburguer">
                <div class="hamburguer"></div>
            </div>
            <div class="logo-header">
                <img src="/images/logo01.png" alt="" srcset="">
            </div>
            <ul class="navbar">
                <li><a href="/">Inicio</a></li>
                <li>
                    <div class="dropdown">
                        <button class="dropbtn"><p>Categorias <i id="iconButton" class="fa fa-sort-down" style="font-size:24px"></i></p></button>
                    <div class="dropdown-content">
                        <% categories.forEach(category => { %>
                            <a href="/category/<%= category.slug %>"> <%= category.title %></a>
                        <% }) %>
                    </div>
                </li> 
                <li><a href="#news">Sobre</a></li>
                <li><a href="#news">Contato</a></li>
            </ul>
        </header>

        <div class="title-featured">
            <h1>Destaques</h1>
        </div>
        <div class="featured">
            <div class="featured-side">
                <a href="" class="featured-article">
                    <div class="img-featured-article">
                        <img src="/images/vue.jpg">
                    </div>
                    <div class="infos-featured-article">
                        <h2>Vue.js e sua simplicidade</h2>
                        <p>Conheça o framework front-end considerado por muitos o mais simples e prático!</p>
                        <div class="date-featured-article">
                            <i class="fa fa-clock-o" style="font-size:20px"></i>
                            <p>27/07/2021</p>
                        </div>
                    </div>
                </a>
            </div>
            <div class="featured-side">
                <a href="" class="featured-article">
                    <div class="img-featured-article">
                        <img src="/images/react.jpg">
                    </div>
                    <div class="infos-featured-article">
                        <h2>A popularidade do React.js</h2>
                        <p>Destacamos vários fatores que influenciam na popularidade desse framework front-end.</p>
                        <div class="date-featured-article">
                            <i class="fa fa-clock-o" style="font-size:20px"></i>
                            <p>27/07/2021</p>
                        </div>
                    </div>
                </a>
            </div>
        </div>

        <main class="latest">
            <section class="articles">
                <h1>Últimos Artigos</h1>
                <% articles.forEach(article => { %>
                    <article class="card-article">
                        <div class="img-card-article">
                            <img src="<%= article.image %>" alt="">
                        </div>
                        <div class="infos-card-article">
                            <h1><%= article.title %></h1>
                            <p><%= article.resume %></p>
                            <div class="date-card-article">
                                <i class="fa fa-clock-o" style="font-size:20px"></i>
                                <p><%= article.date %></p>
                            </div>
                            <div class="button-card-article">
                                <a href="/<%=article.slug%>">Continuar leitura</a>
                            </div>
                        </div>
                    </article>
                <% }) %>
            </section>
            <aside class="recommended">
                <h1>Categorias</h1>
                <ul>
                    <% categories.forEach(category => { %>
                        <li><a href="/category/<%= category.slug %>"> <%= category.title %></a></li>
                    <% }) %>
                </ul>                
            </aside>
        </main>
        <div class="pagination">
            <a href="/articles/page/2"> Próximos >></a>
        </div>
        <footer>
            <p>Blog desenvolvido por <span>Paulo Henrique Leal</span></p>
            <a href="https://www.linkedin.com/in/paulo-henrique-leal/" target="_blank"><img src="/images/linkedin.png" alt="Linkedin"></a>
            <a href="https://api.whatsapp.com/send?phone=5511963164212" target="_blank"><img src="/images/whatsapp.png" alt="Whatsapp"></a>
            <a href="mailto:devpauloleal@gmail.com" target="_blank"><img src="/images/gmail.png" alt="Gmail"></a>
        </footer>
    </div>
<%- include('partials/footer.ejs') %>
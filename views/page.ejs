<%- include('partials/header.ejs') %>
    <div class="container">
        <header>
            <div class="area-hamburguer">
                <div class="hamburguer"></div>
            </div>
            <div class="logo-header">
                <img src="/images/logo01.png" alt="" srcset="">
            </div>
            <ul class="navbar">
                <li><a href="/">Inicio</a></li>
                <li>
                    <div class="dropdown">
                        <button class="dropbtn"><p>Categorias <i id="iconButton" class="fa fa-sort-down" style="font-size:24px"></i></p></button>
                    <div class="dropdown-content">
                        <% categories.forEach(category => { %>
                            <a href="/category/<%= category.slug %>"> <%= category.title %></a>
                        <% }) %>
                    </div>
                </li> 
                <li><a href="#news">Sobre</a></li>
                <li><a href="#news">Contato</a></li>
            </ul>
        </header>

        <main class="latest">
            <section class="articles">
                <h1>Página <%= result.page %></h1>
                <% result.articles.rows.forEach(article => { %>
                    <article class="card-article">
                        <div class="img-card-article">
                            <img src="<%= article.image %>" alt="">
                        </div>
                        <div class="infos-card-article">
                            <h1><%= article.title %></h1>
                            <p><%= article.resume %></p>
                            <div class="date-card-article">
                                <i class="fa fa-clock-o" style="font-size:20px"></i>
                                <p><%= article.date %></p>
                            </div>
                            <div class="button-card-article">
                                <a href="/<%=article.slug%>">Continuar leitura</a>
                            </div>
                        </div>
                    </article>
                <% }) %>
            </section>
            <aside class="recommended">
                <h1>Categorias</h1>
                <ul><a href=""></a>
                    <li><a href="">Desenvolvimento Web</a></li>
                    <li><a href="">Desenvolvimento Mobile</a></li>
                    <li><a href="">Front-end</a></li>
                    <li><a href="">Back-end</a></li>
                    <li><a href="">JavaScript</a></li>
                    <li><a href="">Banco de Dados</a></li>
                    <li><a href="">PHP</a></li>
                    <li><a href="">Python</a></li>
                    <li><a href="">Java</a></li>
                    <li><a href="">C, C++ e C#</a></li>
                </ul>
            </aside>
        </main>
        <div class="pagination">
            <% if(result.page > 2){ %>
                <a href="/articles/page/<%= result.page - 1 %>"> << Anterior</a>
            <% }else if(result.page == 2){ %>
                <a href="/"> << Anterior</a>
            <% } %>

            <% if(result.next){ %>
                <a href="/articles/page/<%= result.page + 1 %>"> Próximo >></a>
            <% } %>
        </div>

        <footer>
            <p>Blog desenvolvido por <span>Paulo Henrique Leal</span></p>
            <a href="https://www.linkedin.com/in/paulo-henrique-leal/" target="_blank"><img src="/images/linkedin.png" alt="Linkedin"></a>
            <a href="https://api.whatsapp.com/send?phone=5511963164212" target="_blank"><img src="/images/whatsapp.png" alt="Whatsapp"></a>
            <a href="mailto:devpauloleal@gmail.com" target="_blank"><img src="/images/gmail.png" alt="Gmail"></a>
        </footer>
    </div>
 <%- include('partials/footer.ejs') %>
<%- include('../../partials/header.ejs') %>
    <div class="container">
        <header>
            <div class="area-hamburguer">
                <div class="hamburguer"></div>
            </div>
            <div class="logo-header">
                <img src="/images/logo01.png" alt="" srcset="">
            </div>
            <ul class="navbarAdmin">
                <li><a href="/admin/home">Artigos</a></li>
                <li><a href="/admin/categories">Categorias</a></li>
                <li><a href="#news">Sair</a></li>
            </ul>
        </header>

        <main class="main-categories">
            <div class="title-main-categories">
                <h1>Categorias</h1>
                <a href="/category/new">Nova Categoria</a>
            </div>
            <table class="table-categories">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Título</th>
                        <th>Slug</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    <% categories.forEach(category => { %>
                        <tr>
                            <td><%= category.id %></td>
                            <td><%= category.title %></td>
                            <td><%= category.slug %></td>
                            <td class="td-exc">
                                <a href="/category/edit/<%= category.id %>"><i class="fa fa-edit" style="font-size:24px"></i></a>

                                <form action="/category/delete" method="post">
                                    <input type="hidden" name="id" value="<%= category.id %>">
                                    <button type="submit"><i class="fa fa-trash" style="font-size:24px"></i></button>
                                </form>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </main>

        
        <!-- <footer></footer> -->
    </div>

    <script src="public/js/showNavAdmin.js"></script>
</body>
</html>
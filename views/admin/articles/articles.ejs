<%- include('../../partials/header.ejs') %>
    <div class="container">
        <header>
            <div class="area-hamburguer">
                <div class="hamburguer"></div>
            </div>
            <div class="logo-header">
                <img src="/images/logo01.png" alt="" srcset="">
            </div>
            <ul class="navbarAdmin">
                <li><a href="/admin/home">Artigos</a></li>
                <li><a href="/admin/categories">Categorias</a></li>
                <li><a href="#news">Sair</a></li>
            </ul>
        </header>

        <main class="main-articles">
            <div class="title-main-articles">
                <h1>Artigos</h1>
                <a href="/article/new">Novo Artigo</a>
            </div>
            <table class="table-articles">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Título</th>
                        <th>Categoria</th>
                        <th>Data</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    <% articles.forEach(article => { %>
                        <tr>
                            <td> <%= article.id %> </td>
                            <td> <%= article.title %> </td>
                            <td> <%= article.category.title %> </td>
                            <td> <%= article.date %> </td>
                            <td class="td-exc">
                                <a href="/article/edit/<%= article.id %>"><i class="fa fa-edit" style="font-size:24px"></i></a>

                                <form action="/article/delete" method="post">
                                    <input type="hidden" name="id" value="<%= article.id %>">
                                    <button type="submit"><i class="fa fa-trash" style="font-size:24px"></i></button>
                                </form>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </main>
    </div>

    <script src="/js/showNavAdmin.js"></script>
</body>
</html>
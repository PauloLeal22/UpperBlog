<%- include('partials/header.ejs') %>
    <div class="register">
        <div class="area-form">
            <% if(error != false) { %>
                <div class="error">
                    <p><%= error %></p>
                </div>
            <% } %>
            <div class="infos-form">
                <h1>Registre-se</h1>
                <form action="/user/register" method="post">
                    <input type="text" name="name" placeholder="Nome"><br>
                    <input type="text" name="lastName" placeholder="Sobrenome"><br>
                    <input type="email" name="email" placeholder="Email"><br>
                    <input type="password" name="password" placeholder="Senha"><br>
                    <input type="password" name="confirmPassword" placeholder="Repita sua senha"><br>
                    <button type="submit">Registrar</button><br>
                    <hr>
                </form>
                <p>Já possui conta?</p>
                <p><a href="/admin/login">Faça login</a></p>
            </div>
        </div>
        <div class="area-bg-register">
            <div class="logo-register">
                <img src="/images/logo01.png" alt="" srcset="">
            </div>
            <img src="/images/pablita-finance.png" alt="Pessoas falando" id="image-register">
        </div>
    </div>

    <!-- Illustration by <a href="https://icons8.com/illustrations/author/5bf673a26205ee0017636674">Anna Golde</a> from <a href="https://icons8.com/illustrations">Ouch!</a> -->
</body>
</html>